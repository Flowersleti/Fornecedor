@model CadastroDeFornecedores.Models.Fornecedor

@{
    Layout = "_Layout";
}

<form method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="nome">Nome</label>
            <input name="nome" id="nome" class="form-control" type="text" value="@Model.Nome" placeholder="Digite o nome">
            @Html.ValidationMessage("nome")
        </div>
        <div class="form-group col-md-6">
            <label for="cpfcnpj">CPF/CNPJ</label>
            <input name="cpfcnpj" id="cpfcnpj" class="form-control" type="text" value="@Model.CPFCNPJ" placeholder="Digite o CPF ou CNPJ">
            @Html.ValidationMessage("cpfcnpj")
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="/empresa" class="btn btn-primary">Cancelar</a>
</form>
